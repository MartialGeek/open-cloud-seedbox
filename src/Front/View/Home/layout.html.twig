<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Warez!!!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="/css/app.css" />
    {% endblock %}
    <script src="/bower_components/modernizr/modernizr.js"></script>
</head>
<body>

{% block body %}
    <nav class="top-bar foundation-bar" data-topbar>
        <ul class="title-area">
            <li class="name"><h1><a href="{{ path('homepage') }}">Warez companion</a></h1></li>
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>
        <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
                {% if app.session.get('connected') %}
                <li class="has-dropdown">
                    <a id="profile-status" href="">{{ app.session.get('username') }}</a>
                    <ul class="dropdown">
                        <li><a href="">Profile</a></li>
                        <li><a href="{{ path('logout') }}">Logout</a></li>
                    </ul>
                </li>
                {% else %}
                <li class="has-form">
                    <div class="row collapse medium-collapse">
                        <form action="{{ path('login') }}" method="post">
                            <div class="large-4 medium-4 small-4 columns">
                                {{ form_widget(loginForm.email, {'attr': {'placeholder': 'email'}}) }}
                            </div>
                            <div class="large-4 medium-4 small-4 columns">
                                {{ form_widget(loginForm.password, {'attr': {'placeholder': 'password'}}) }}
                            </div>
                            <div class="large-4 medium-4 small-3 columns">
                                {{ form_rest(loginForm) }}
                                <input id="connect_btn" type="submit" value="Connect" class="button expand" />
                            </div>
                        </form>
                    </div>
                </li>
                {% endif %}
            </ul>
        </section>
    </nav>

    <div class="main-content">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-notice">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-success">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-error">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/foundation/js/foundation.min.js"></script>
<script src="/js/app.js"></script>
{% endblock %}
</body>
</html>
