<!doctype html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}Open Cloud Seedbox{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="/css/app.css" />
    {% endblock %}
    <script src="/bower_components/modernizr/modernizr.js"></script>
</head>
<body>

{% block body %}
    <nav class="top-bar foundation-bar" data-topbar>
        <ul class="title-area">
            <li class="name"><h1><a href="{{ path('homepage') }}">Open Cloud Seedbox</a></h1></li>
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
        </ul>
        <section class="top-bar-section">
            <!-- Right Nav Section -->
            <ul class="right">
                {% if app.session.get('connected') %}
                    {%  set currentPage = app.request.attributes.get('_route') %}
                    <li{% if currentPage == 'file_browser' %} class="active"{% endif %}>
                        <a href="{{ path('file_browser') }}">Browse files</a>
                    </li>
                    <li{% if currentPage == 'tracker_search' %} class="active"{% endif %}>
                        <a href="{{ path('tracker_search') }}">Search torrents</a>
                    </li>
                    <li{% if currentPage == 'transmission_torrents' %} class="active"{% endif %}>
                        <a href="{{ path('transmission_torrents') }}">Downloads</a>
                    </li>
                    <li class="has-dropdown{% if currentPage == 'settings' %} active{% endif %}">
                        <a href="{{ path('settings') }}">{{ app.session.get('username') }}</a>
                        <ul class="dropdown">
                            <li{% if currentPage == 'settings' %} class="active"{% endif %}>
                                <a href="{{ path('settings') }}">Settings</a>
                            </li>
                            <li><a href="{{ path('logout') }}">Logout</a></li>
                        </ul>
                    </li>
                {% else %}
                    <li class="has-form">
                        {{ render(url('form_login')) }}
                    </li>
                {% endif %}
            </ul>
        </section>
    </nav>

    <div class="main-content">
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-box info radius">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-box success radius">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-box alert radius">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('warning') %}
            <div class="row">
                <div class="small-12 columns">
                    <div data-alert class="alert-box warning radius">
                        {{ flashMessage }}
                        <a href="#" class="close">&times;</a>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block javascripts %}
<script src="/bower_components/jquery/dist/jquery.min.js"></script>
<script src="/bower_components/foundation/js/foundation.min.js"></script>
<script src="/bower_components/mithril/mithril.min.js"></script>
<script src="/js/app.js"></script>
{% endblock %}
</body>
</html>
